{
	"name": "NSFWTag",
	"author": "Fumple",
	"url": "https://github.com/fumple/MediaWiki-NSFWTag",
	"description": "This extension adds an `<nsfw>` and `<sfw>` tag along with {{#nsfw}}, along with an user option to toggle between the two",
	"version": "git",
	"license-name": "GPL-3.0-only",
	"type": "parserhook",

    "AutoloadClasses": {
        "MediaWiki\\Extension\\NSFWTag\\Extension": "src/Extension.php"
    },
	"config": {
		"NSFWTagNSFWTagName": {
			"value": "nsfw",
			"description": "Name of the <nsfw> tag"
		},
		"NSFWTagSFWTagName": {
			"value": "sfw",
			"description": "Name of the <sfw> tag"
		},
		"NSFWTagNSFWFunctionName": {
			"value": "nsfw",
			"description": "Name of the {{#nsfw}} function"
		},
		"NSFWTagQueryParameterName": {
			"value": "shownsfw",
			"description": "Name of the ?shownsfw=1 query parameter"
		}
	},
	"ExtensionMessagesFiles": {
		"NSFWTagMagic": "NSFWTag.i18n.php"
	},
    "HookHandlers": {
	    "NSFWTag": {
            "class": "MediaWiki\\Extension\\NSFWTag\\Extension",
            "services": [
                "UserOptionsManager"
            ]
	    }
    },
	"Hooks": {
        "BeforePageDisplay": "NSFWTag",
		"EditPageGetCheckboxesDefinition": "NSFWTag",
		"GetPreferences": "NSFWTag",
        "OutputPageParserOutput": "NSFWTag",
        "ParserFirstCallInit": "NSFWTag",
        "ParserOptionsRegister": "NSFWTag"
	},
	"MessagesDirs": {
		"NSFWTag": [
			"i18n"
		]
	},

	"manifest_version": 2
}